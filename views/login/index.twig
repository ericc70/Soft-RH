   <form method='post' action="/login" class="row flex-column offset-md-4 offset-lg-5">
  <div class="form-group">
    <label for="exampleInputEmail1" class="ml-3">Identifiant</label>
    <input type="text" class="form-control border-r-50 col-12 col-sm-12 col-md-6  col-lg-4 " name="inptName" aria-describedby="emailHelp" placeholder="Enter votre nom">

 
    <label for="exampleInputPassword1" class="ml-3">Password</label>
    <input type="password" class="form-control border-r-50 col-12 col-sm-12 col-md-6  col-lg-4" name="passwd" placeholder="Password">
  </div>

  <button type="submit" class="btn btn-primary border-r-50 col-12 col-sm-12 col-md-6  col-lg-4">Submit</button>
</form>
</div>
