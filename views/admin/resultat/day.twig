        <script>
         
         
        {% for i in 1..4 %}
        // console.log({{i-1}});
    console.log({{ results.humeur1 | json_encode()}});
        
                // for(i=1;i<=2;i++){

                    
        var ctx = document.getElementById({{i}}).getContext('2d');

var myChart = new Chart(ctx, {
    type: 'bar',
