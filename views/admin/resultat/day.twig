{% extends "base.twig" %}
{% block content %}


		<div class="chart-container container-fluid d-flex flex-wrap  " style="position: relative;width=50px">
			 {% for i in 1..4  %}
                <canvas class="col-6 col-lg-6 mt-5  " id="{{i}}"></canvas>
                
         
            {% endfor %}
    
		</div>



